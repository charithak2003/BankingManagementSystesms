@{
}

@model BankingSystems.Models.Branch

@if (Model is null)
{
    <p>No branches are found</p>
}
else
{
    <h1>Edit Branches</h1>
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="number" class="form-control" asp-for="Id" readonly/>
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" asp-for="City" />
        </div>

        <div class="mt-3">
            <label class="form-label">NoOfEmployees</label>
            <input type="number" class="form-control" asp-for="NoOfEmps" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger mt-1" asp-action="Delete" asp-controller="Branch">Delete</button>
        </div>
    </form>
}

