@model BankingSystems.Models.AddBranchViewModel

<h1>Add Branches</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" required/>
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" required />
    </div>

    <div class="mt-3">
        <label class="form-label">City</label>
        <input type="text" class="form-control" asp-for="City" required />
    </div>

    <div class="mt-3">
        <label class="form-label">NoOfEmps</label>
        <input type="number" class="form-control" asp-for="NoOfEmps" required />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>