@{
}
@model BankingSystems.Models.Customer

@if (Model is null)
{
    <p>No Customer are found</p>
}
else
{
    <h1>Edit Customer</h1>
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="number" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">CustomerName</label>
            <input type="text" class="form-control" asp-for="CustomerName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="number" class="form-control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <label class="form-label">AadhaarNo</label>
            <input type="number" class="form-control" asp-for="AadhaarNo" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger mt-1" asp-action="Delete" asp-controller="Customer">Delete</button>
        </div>

    </form>
}