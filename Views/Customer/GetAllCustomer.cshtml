@{
}
@model List<BankingSystems.Models.Customer>
<h1>Get All Customers</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>CustomerName</th>
            <th>Address</th>
            <th>Phone</th>
            <th>AadhaarNo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CustomerName</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.AadhaarNo</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Customer" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>


