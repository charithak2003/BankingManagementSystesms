@{
}
@model List<BankingSystems.Models.Account>
<h1>Get All Accounts</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>AccountNo</th>
            <th>IFSCCode</th>
            <th>Balance</th>
            <th>NoOfTransactions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.AccountNo</td>
                <td>@item.IFSCCode</td>
                <td>@item.Balance</td>
                <td>@item.NoOfTransactions</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Account" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
