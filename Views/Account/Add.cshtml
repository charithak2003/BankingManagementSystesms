@model BankingSystems.Models.AddAccountViewModel

<h1>Add Accounts</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>

    <div class="mt-3">
        <label class="form-label">AccountNo</label>
        <input type="number" class="form-control" asp-for="AccountNo" required />
    </div>

    <div class="mt-3">
        <label class="form-label">IFSCCode</label>
        <input type="text" class="form-control" asp-for="IFSCCode" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Balance</label>
        <input type="number" class="form-control" asp-for="Balance" required />
    </div>
    <div class="mt-3">
        <label class="form-label">NoOfTransactions</label>
        <input type="number" class="form-control" asp-for="NoOfTransactions" required />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>

