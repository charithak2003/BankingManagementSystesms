@{
}
@model BankingSystems.Models.Employee

@if (Model is null)
{
    <p>No Employees are found</p>
}
else
{
    <h1>Edit Employees</h1>
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="number" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Ssn</label>
            <input type="text" class="form-control" asp-for="Ssn"  />
        </div>

        <div class="mt-3">
            <label class="form-label">Bdate</label>
            <input type="date" class="form-control" asp-for="Bdate" />
        </div>

        <div class="mt-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" />
        </div>

        <div class="mt-3">
            <label class="form-label">Gender</label>
            <input type="text" class="form-control" asp-for="Gender" />
        </div>

        <div class="mt-3">
            <label class="form-label">Salary</label>
            <input type="number" class="form-control" asp-for="Salary" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger mt-1" asp-action="Delete" asp-controller="Employee">Delete</button>
        </div>

    </form>
}
