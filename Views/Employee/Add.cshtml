@{
}
@model BankingSystems.Models.AddEmployeeViewModel
<style>
    form {
        justify-content: center;
        background-color: white;
        padding: 20px;
    }


    h1 {
        text-align: center
    }

    body {
        background-color: aliceblue;
    }


    button {
        cursor: pointer;
    }
</style>

<form method="post">
    <h1>Add Employees</h1>
    <div class="mt-3">
        <label class="form-label">Ssn</label>
        <input type=" number" class="form-control" asp-for="Ssn" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Bdate</label>
        <input type="date" class="form-control" asp-for="Bdate" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Gender</label>
        <input type="text" class="form-control" asp-for="Gender" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="Salary" required />
    </div><br />
    <div class="d-grid gap-2">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>


    

</form>

